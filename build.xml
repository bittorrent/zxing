<project name="MyProject" default="dist" basedir=".">
	<target name="init">
		<mkdir dir="classes/"/>
		<mkdir dir="dist/"/>
	</target>
	<target name="compile" depends="init">
		<javac source="1.7" target="1.7" srcdir="core/src/main/java/" destdir="classes/">
			<compilerarg line="-encoding UTF-8"/>
		</javac>
	</target>
	<target name="dist" depends="compile">
		<jar jarfile="dist/zxing-core.jar" basedir="classes/"/>
	</target>
	<target name="clean">
		<delete dir="classes"/>
		<delete dir="dist"/>
	</target>
</project>
